    <style name="Medallion">
        <item name="android:layout_height">@dimen/dashboard_widget_diameter</item>
        <item name="android:layout_width">@dimen/dashboard_widget_diameter</item>
        <item name="android:layout_marginBottom">@dimen/dashboard_widget_vertical_margin</item>
        <item name="android:background">@drawable/dashboard_medallion</item>
        <item name="android:elevation">@dimen/widget_elevation</item>
        <item name="android:stateListAnimator">@animator/widget_animator</item>
    </style>

    <style name="MedallionLabel" parent="text_appearance_small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dashboard_widget_label_margin</item>
    </style>

    <style name="DashboardIconButton">
        <item name="android:clickable">true</item>
        <item name="android:layout_height">@dimen/dashboard_icon_height</item>
        <item name="android:layout_width">@dimen/dashboard_icon_width</item>
        <item name="android:layout_marginTop">@dimen/dashboard_icon_top_margin</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:stateListAnimator">@animator/icon_animator</item>
    </style>

