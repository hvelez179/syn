<?xml version="1.0" encoding="utf-8"?>

<resources>

    <dimen name="default_text_size">18dp</dimen>
    <dimen name="default_text_extra">-2dp</dimen>
    <dimen name="xxlarge_text_size">88dp</dimen>
    <dimen name="xxlarge_text_extra">-16dp</dimen>
    <dimen name="xlarge_text_size">44dp</dimen>
    <dimen name="xlarge_text_extra">-16dp</dimen>
    <dimen name="large_text_size">24dp</dimen>
    <dimen name="large_text_extra">-1dp</dimen>
    <dimen name="demi_large_text_size">20dp</dimen>
    <dimen name="demi_large_text_extra">-4dp</dimen>
    <dimen name="small_text_size">16dp</dimen>
    <dimen name="small_text_extra">0dp</dimen>
    <dimen name="label_text_size">14dp</dimen>
    <dimen name="label_text_extra">0dp</dimen>
    <dimen name="hyperlink_text_size">15dp</dimen>
    <dimen name="hyperlink_text_extra">0dp</dimen>
    <dimen name="normal_text_size">16dp</dimen>
    <dimen name="normal_text_extra">0dp</dimen>
    <dimen name="input_text_size">20dp</dimen>
    <dimen name="input_text_extra">0dp</dimen>
    <dimen name="small_label_text_size">11dp</dimen>
    <dimen name="small_label_text_extra">0dp</dimen>

    <dimen name="clear_text_field_size">16dp</dimen>
    <dimen name="clear_text_field_hotspot_width">32dp</dimen>
    <dimen name="edit_text_bottom_line_padding">5dp</dimen>

    <dimen name="text_field_icon_padding">8dp</dimen>

    <style name="text_appearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/default_text_extra</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_appearance_xxlarge" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/xxlarge_text_size</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:includeFontPadding">false</item>
        <!--<item name="android:lineSpacingExtra">@dimen/xxlarge_text_extra</item>-->
        <item name="android:textColor">@color/colorBoldText</item>
    </style>

    <style name="text_appearance_xlarge" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/xlarge_text_size</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/xlarge_text_extra</item>
        <item name="android:textColor">@color/colorBoldText</item>
    </style>

    <style name="text_appearance_large" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/large_text_extra</item>
        <item name="android:textColor">@color/colorBoldText</item>
    </style>

    <style name="text_appearance_demi_large" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/demi_large_text_size</item>
        <item name="android:fontFamily">@font/avenir_next_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/demi_large_text_extra</item>
    </style>

    <style name="text_appearance_medium" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/default_text_extra</item>
        <item name="android:fontFamily">@font/avenir_next_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_appearance_small" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/small_text_extra</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_appearance_xsmall" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/label_text_extra</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_appearance_label" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/label_text_extra</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_appearance_small_label" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/small_label_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/small_label_text_extra</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_appearance_hyperlink" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/hyperlink_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/hyperlink_text_extra</item>
        <item name="android:fontFamily">@font/avenir_next_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="text_field_error" parent="text_appearance_small">
        <item name="android:textColor">@color/red</item>
        <item name="android:drawableStart">@drawable/ic_text_field_error</item>
        <item name="android:drawablePadding">@dimen/text_field_icon_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_field_error_without_drawable" parent="text_appearance_small">
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="input_field_style" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_bottom_line</item>
        <item name="android:drawableEnd">@drawable/clear_text_field</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:textColor">@color/error_text_color</item>
        <item name="android:fontFamily">@font/avenir_next_medium</item>
    </style>


    <!-- Old Stuff -->

    <color name="colorText">#003766</color>
    <color name="colorRedText">#ee6161</color>

    <style name="LightText">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="BoldText">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorBoldText</item>
    </style>

    <style name="regular_text">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="small_text">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="RegularText" parent="regular_text"/>
    <style name="SmallText" parent="small_text"/>

</resources>