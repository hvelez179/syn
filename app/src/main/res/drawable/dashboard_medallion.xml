<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res/com.teva.respiratoryapp">
    <item>
        <selector>
            <item app:critical="true" android:drawable="@drawable/dashboard_widget_red"/>

            <item app:critical="false" android:drawable="@drawable/dashboard_widget_gray"/>
        </selector>
    </item>

    <item>
        <shape>
            <padding
                android:left="@dimen/dashboard_widget_padding"
                android:right="@dimen/dashboard_widget_padding"
                android:top="@dimen/dashboard_widget_padding"
                android:bottom="@dimen/dashboard_widget_padding"/>
        </shape>
    </item>

</layer-list>