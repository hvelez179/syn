<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res/com.teva.respiratoryapp">
    <item app:critical="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/alertRed"/>
            <corners android:radius="@dimen/dashboard_card_corner_radius"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/dashboard_card_corner_radius"/>
        </shape>
    </item>
</selector>