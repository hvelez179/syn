<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:id="@+id/walkthrough_devices_2_image"
        android:layout_width="@dimen/walkthrough_devices2_image_width"
        android:layout_height="@dimen/walkthrough_devices2_image_height"
        android:layout_marginTop="@dimen/walkthrough_devices2_image_top_margin"
        android:layout_marginStart="@dimen/walkthrough_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/check_dose_counter"/>
    <TextView
        android:id="@+id/walkthrough_devices_2_message1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/walkthrough_horizontal_margin"
        android:layout_marginEnd="@dimen/walkthrough_horizontal_margin"
        android:layout_marginTop="@dimen/walkthrough_devices_2_message_top_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walkthrough_devices_2_image"
        android:text="@string/walkthroughDeviceNearEmpty_text"
        style="@style/text_appearance" />
</android.support.constraint.ConstraintLayout>